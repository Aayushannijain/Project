@page
@using LearningPhase2.AppCode
@model LearningPhase2.Pages.Department.DepartmentListModel
<h1>N-Tier Employee List</h1>
<br />
@{
    Html.RenderPartialAsync("_Message");
}

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            
            <th scope="col">Created By</th>
            <th scope="col">Updated By</th>
            
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DepartmentList)
        {
            <tr>

                <td>@item.DepartmentName</td>
                <td>@item.Description</td>
                <td>
                    @item.CreatedBy
                    <br>
                    @Html.DisplayDate(@item.CreatedOnUTC)

                </td>
                <td>
                    @item.UpdatedBy
                    <br>
                    @Html.DisplayDate(@item.UpdatedOnUTC)
                </td>
                <td>

                    <a href="/EmployeeNTier/Update?id=@(item.Id)" title="Edit"> Edit </a>
                    <a href="#." title="Delete" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="ShowDeleteConfirmation(@item.Id)"> Delete </a>

                </td>
            </tr>
        }
    </tbody>

</table>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Delete</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                You are going to delete the selected Department. Are you sure you want to do it?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <button type="button" class="btn btn-primary" onclick="DeleteEmployee()">Delete</button>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script src="~/js/jquery.blockui.js"></script>
    <script type="text/javascript">
         var delEmployeeId = 0;
        function ShowDeleteConfirmation(id){
            delEmployeeId = id;
           $("#exampleModal").modal("show");
        }
        function DeleteEmployee(){
             $("#exampleModal").modal("hide");
               $.blockUI();
             document.location.href = "/Department/DepartmentList?handler=Delete&id=" + delEmployeeId;
        }
    </script>
}
